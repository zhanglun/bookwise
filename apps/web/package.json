{
  "name": "@bookwise/web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "pglite:start:studio": "drizzle-kit studio --config drizzle.config.ts --host 127.0.0.1",
    "pglite:migration:generate": "drizzle-kit generate --config drizzle.config.ts && pnpx tsx ./src/db/compile-migration.ts",
    "pglite:migration:apply": "drizzle-kit migrate --config drizzle.config.ts",
    "pglite:migration:deploy": "tsx src/deploy.pglite.ts",
    "pglite:push": "drizzle-kit push --config drizzle.config.ts"
  },
