generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum BookFormat {
  EPUB
  MOBI
  PDF
  TEXT
}

model Book {
  id          Int      @id @default(autoincrement())
  title       String
  cover       String
  subject     String
  description String
  contributor String
  source      String
  language_id String
  format      BookFormat
  page_count  Int
  isbn        String
  publish_at  DateTime
  created_at  DateTime
  updated_at  DateTime
}
